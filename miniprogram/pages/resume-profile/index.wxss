/* miniprogram/pages/resume-profile/index.wxss */
.page {
  height: 100vh;
  background-color: #f8fafc; /* Softer background */
  display: flex;
  flex-direction: column;
}

/* Header Section */
.header-section {
  padding: 40rpx 40rpx 20rpx;
  background-color: #ffffff;
}

.page-title {
  font-size: 44rpx;
  font-weight: 700;
  color: #111827;
  letter-spacing: -0.5px;
}

.tips-card {
  margin-top: 32rpx;
  background-color: #e5f0ff; /* Theme blue background */
  padding: 24rpx 32rpx;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.tips-icon {
  width: 32rpx;
  height: 32rpx;
  flex-shrink: 0;
}

.tips-text {
  font-size: 24rpx;
  color: #1d4ed8; /* Theme blue text */
  line-height: 1.4;
  font-weight: 500;
}

/* Body and Scroll View */
.resume-content {
  flex: 1;
  height: 0;
}

.resume-body {
  padding: 32rpx 40rpx;
}

.section-group {
  margin-bottom: 48rpx;
}

.section-group-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #64748b;
  margin-bottom: 20rpx;
  margin-left: 8rpx;
  text-transform: uppercase;
  letter-spacing: 1px;
}

.section-header-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.section-header-row .section-group-title {
  margin-bottom: 0;
}

/* Card Styling */
.card {
  background-color: #ffffff;
  border-radius: 28rpx;
  padding: 0 32rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.03);
}

/* List Item Styling */
.list-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 36rpx 0;
  border-bottom: 1rpx solid #f1f5f9;
}

.list-item:last-child {
  border-bottom: none;
}

.item-label {
  font-size: 30rpx;
  color: #334155;
  font-weight: 500;
}

.item-value {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.value-text {
  font-size: 30rpx;
  color: #111827;
  font-weight: 400;
  text-align: right;
  max-width: 350rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.placeholder-text {
  font-size: 30rpx;
  color: #94a3b8;
}

.arrow-icon {
  width: 14rpx;
  height: 14rpx;
  border-top: 3rpx solid #cbd5e1;
  border-right: 3rpx solid #cbd5e1;
  transform: rotate(45deg);
  margin-left: 8rpx;
}

/* Photo Item Specifics */
.photo-item {
  padding: 24rpx 0;
}

.avatar-img {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  border: 4rpx solid #f8fafc;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.avatar-placeholder {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background-color: #f1f5f9;
  border: 4rpx solid #f8fafc;
}

/* Add Button */
.add-btn {
  padding: 10rpx 20rpx;
  background-color: #eff6ff;
  border-radius: 12rpx;
}

.add-btn-text {
  font-size: 24rpx;
  color: #1d4ed8;
  font-weight: 600;
}

/* Education & Certificate Items */
.education-item, .certificate-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx 0;
  border-bottom: 1rpx solid #f1f5f9;
}

.education-item:last-child, .certificate-item:last-child {
  border-bottom: none;
}

.edu-info {
  flex: 1;
}

.edu-school {
  font-size: 30rpx;
  font-weight: 600;
  color: #111827;
  margin-bottom: 4rpx;
}

.edu-details {
  font-size: 26rpx;
  color: #475569;
  margin-bottom: 8rpx;
}

.edu-date {
  font-size: 24rpx;
  color: #64748b;
}

.cert-text {
  font-size: 30rpx;
  color: #111827;
  flex: 1;
}

.empty-state {
  padding: 60rpx 0;
  display: flex;
  justify-content: center;
  align-items: center;
}

.empty-text {
  font-size: 28rpx;
  color: #94a3b8;
}

.bottom-safe-area {
  height: 80rpx;
}

/* Drawer Styles */
.drawer-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.4);
  z-index: 1000;
  visibility: hidden;
  opacity: 0;
  transition: all 0.3s ease;
}

.drawer-mask-show {
  visibility: visible;
  opacity: 1;
}

.drawer {
  position: fixed;
  top: 0;
  right: 0;
  width: 85%;
  height: 100%;
  background-color: #ffffff;
  z-index: 1001;
  transform: translateX(100%);
  transition: transform 0.3s ease;
  display: flex;
  flex-direction: column;
  box-shadow: -10rpx 0 30rpx rgba(0, 0, 0, 0.05);
}

.drawer-show {
  transform: translateX(0);
}

.drawer-header {
  padding: 40rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #f1f5f9;
}

.drawer-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #111827;
}

.drawer-close {
  font-size: 48rpx;
  color: #94a3b8;
  padding: 10rpx;
}

.drawer-content {
  flex: 1;
  padding: 40rpx;
  overflow-y: auto;
}

.form-item {
  margin-bottom: 40rpx;
}

.form-label {
  font-size: 26rpx;
  font-weight: 600;
  color: #64748b;
  margin-bottom: 16rpx;
  display: block;
}

.form-input {
  width: 100%;
  height: 90rpx;
  background-color: #f8fafc;
  border-radius: 16rpx;
  padding: 0 30rpx;
  box-sizing: border-box;
  font-size: 30rpx;
  color: #111827;
}

.picker-value {
  width: 100%;
  height: 90rpx;
  background-color: #f8fafc;
  border-radius: 16rpx;
  padding: 0 30rpx;
  box-sizing: border-box;
  font-size: 30rpx;
  color: #111827;
  display: flex;
  align-items: center;
}

.drawer-footer {
  padding: 40rpx;
  padding-bottom: calc(40rpx + env(safe-area-inset-bottom));
  display: flex;
  gap: 24rpx;
  border-top: 1rpx solid #f1f5f9;
}

.btn-save {
  flex: 1;
  height: 100rpx;
  background-color: #1d4ed8;
  border-radius: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #ffffff;
  font-size: 32rpx;
  font-weight: 600;
}

.btn-delete {
  flex: 0.5;
  height: 100rpx;
  background-color: #fee2e2;
  border-radius: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #dc2626;
  font-size: 32rpx;
  font-weight: 600;
}
