.container {
  padding: 40px 24px;
  background-color: #ffffff;
  min-height: 100vh;
  box-sizing: border-box;
}

.header {
  margin-top: 60px;
  margin-bottom: 40px;
}

.title {
  font-size: 28px;
  font-weight: bold;
  color: #1f2937;
  margin-bottom: 8px;
}

.subtitle {
  font-size: 14px;
  color: #6b7280;
}

.tabs {
  display: flex;
  margin-bottom: 30px;
  border-bottom: 1px solid #e5e7eb;
}

.tab {
  margin-right: 24px;
  padding-bottom: 12px;
  font-size: 16px;
  color: #6b7280;
  position: relative;
}

.tab.active {
  color: #2563eb;
  font-weight: 500;
}

.tab.active::after {
  content: '';
  position: absolute;
  bottom: -1px;
  left: 0;
  width: 100%;
  height: 2px;
  background-color: #2563eb;
}

.form {
  margin-bottom: 20px;
}

.input-group {
  margin-bottom: 20px;
}

.label {
  font-size: 14px;
  color: #374151;
  margin-bottom: 8px;
  display: block;
}

.input {
  width: 100%;
  height: 48px;
  border: 1px solid #d1d5db;
  border-radius: 8px;
  padding: 0 16px;
  box-sizing: border-box;
  font-size: 16px;
  color: #111827;
}

.submit-btn {
  width: 100%;
  height: 48px;
  background-color: #2563eb;
  color: white;
  border-radius: 8px;
  font-size: 16px;
  font-weight: 500;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 32px;
}

.submit-btn:active {
  background-color: #1d4ed8;
}

.tips {
  margin-top: 40px;
  text-align: center;
}

.tips text {
  font-size: 12px;
  color: #9ca3af;
}
