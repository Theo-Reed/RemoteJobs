/* miniprogram/pages/resume-generator/index.wxss */
.page {
  height: 100vh;
  background-color: var(--bg-page);
  display: flex;
  flex-direction: column;
}

.form-content {
  flex: 1;
  height: 0;
}

.form-body {
  padding: 32rpx 40rpx;
}

.header-section {
  margin-bottom: 40rpx;
}

.header-title {
  display: block;
  font-size: 40rpx;
  font-weight: 600;
  color: var(--text-main);
  margin-bottom: 12rpx;
}

.header-subtitle {
  display: block;
  font-size: 28rpx;
  color: var(--text-sub);
}

.form-item {
  margin-bottom: 40rpx;
}

.label {
  display: block;
  font-size: 28rpx;
  font-weight: 500;
  color: var(--text-main);
  margin-bottom: 16rpx;
}

.input {
  width: 100%;
  height: 88rpx;
  background: var(--bg-card);
  border: 1rpx solid var(--border);
  border-radius: 16rpx;
  padding: 0 24rpx;
  box-sizing: border-box;
  font-size: 30rpx;
  color: var(--text-main);
  transition: all 0.2s ease;
}

.input:focus {
  border-color: var(--primary);
  background: var(--bg-card);
}

.textarea {
  width: 100%;
  height: 300rpx;
  background: var(--bg-card);
  border: 1rpx solid var(--border);
  border-radius: 16rpx;
  padding: 24rpx;
  box-sizing: border-box;
  font-size: 30rpx;
  color: var(--text-main);
  line-height: 1.5;
  transition: all 0.2s ease;
}

.textarea:focus {
  border-color: var(--primary);
}

.placeholder {
  color: var(--text-holder);
}

/* Bottom Bar Styles (Adapted from job-detail) */
.apply-overlay {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 100;
  height: calc(180rpx + env(safe-area-inset-bottom));
  pointer-events: none;
}

.apply-overlay-mask {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(to top, var(--bg-page) 20%, rgba(255, 255, 255, 0) 100%);
}

@media (prefers-color-scheme: dark) {
  .apply-overlay-mask {
    background: linear-gradient(to top, var(--bg-page) 20%, rgba(30, 31, 32, 0) 100%);
  }
}

.apply-dock-content {
  position: absolute;
  left: 0;
  right: 0;
  bottom: calc(20rpx + env(safe-area-inset-bottom));
  display: flex;
  align-items: center;
  justify-content: center;
  pointer-events: auto;
  padding: 0 40rpx;
}

.apply-button {
  width: 100%;
  height: 96rpx;
  background: var(--text-holder); /* Default Grey */
  color: #ffffff;
  border-radius: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: 600;
  box-shadow: var(--shadow-sm);
  transition: background-color 0.3s ease, transform 0.1s ease;
}

.apply-button.active {
  background: var(--primary); /* Active Blue */
  box-shadow: 0 8rpx 20rpx -4rpx rgba(37, 99, 235, 0.4);
}

.apply-button.disabled {
  opacity: 0.6;
}

.apply-button-active {
  transform: scale(0.98);
}
