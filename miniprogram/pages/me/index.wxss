.page {
    min-height: 100vh;
    background: #f5f7fb;
    box-sizing: border-box;
    padding: 40rpx 32rpx;
}

.content {
    margin-top: 40rpx;
}

.title {
    font-size: 44rpx;
    font-weight: 600;
    color: #1f2933;
}

.desc {
    margin-top: 16rpx;
    font-size: 28rpx;
    color: #6b7280;
}

.me-card {
    background: #ffffff;
    border-radius: 24rpx;
    padding: 28rpx;
    box-shadow: 0 8rpx 20rpx rgba(15, 23, 42, 0.04);
    cursor: pointer;
    -webkit-tap-highlight-color: transparent;
    tap-highlight-color: transparent;
}

.user-row {
    display: flex;
    align-items: center;
}

.avatar,
.avatar-placeholder {
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
    margin-right: 18rpx;
    overflow: hidden;
    cursor: pointer;
}

.avatar {
    display: block;
}

.avatar-placeholder {
    background-color: #e0e0e0;
    cursor: pointer;
}

.user-text {
    flex: 1;
    height: 100rpx;
    display: flex;
    align-items: center;
}

.nickname-container {
    display: flex;
    align-items: center;
    gap: 15rpx; /* 从12rpx增加到15rpx，加宽3rpx */
}

.nickname {
    font-size: 32rpx;
    font-weight: bold;
    color: #333;
    line-height: 1.2;
    margin: 0;
    padding: 0;
}

.member-badge {
    padding: 4rpx 12rpx;
    border-radius: 12rpx;
    font-size: 20rpx;
    font-weight: 600;
    display: flex;
    align-items: center;
}

/* 体验会员：主题蓝色linear，透明度高一点 */
.member-badge-trial {
    background: linear-gradient(135deg, rgba(29, 78, 216, 0.4) 0%, rgba(59, 130, 246, 0.4) 100%);
}

/* 普通会员：主题蓝色linear，透明度低一点 */
.member-badge-normal {
    background: linear-gradient(135deg, rgba(29, 78, 216, 0.7) 0%, rgba(59, 130, 246, 0.7) 100%);
}

/* 高级会员：沿用现在的linear背景色 */
.member-badge-premium {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.member-text {
    font-size: 20rpx;
    font-weight: 600;
    color: #ffffff;
}

.nickname-login {
    color: #1d4ed8;
}

.phone-auth-name-btn {
    background: transparent;
    padding: 0;
    margin: 0;
    border: none;
    display: inline-flex;
    align-items: center;
    justify-content: flex-start;
    height: auto;
    width: auto;
    line-height: 1.2;
}

.phone-auth-name-btn::after {
    border: none;
}

.me-list {
    margin-top: 24rpx;
    background: #ffffff;
    border-radius: 24rpx;
    overflow: hidden;
    box-shadow: 0 8rpx 20rpx rgba(15, 23, 42, 0.04);
}

.me-item {
    padding: 28rpx;
    position: relative;
}

.me-item::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 20rpx;
    right: 20rpx;
    height: 1rpx;
    background: #f0f0f0;
}

.me-item:last-child::after {
    display: none;
}

.me-item-text {
    font-size: 30rpx;
    color: #333;
}

/* --- Language bottom sheet (same motion pattern as favorites) --- */
/* remove unused handle styles */
.language-sheet-handle {
    display: none;
}

.language-item {
    height: 96rpx;
    border-radius: 18rpx;
    background: #f3f4f6;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-top: 18rpx;
}

.language-item-text {
    font-size: 30rpx;
    font-weight: 600;
    color: #111827;
    display: flex;
    align-items: center;
    gap: 8rpx;
}

.language-item view.language-item-text {
    margin-left: 30rpx;
}

.member-star-icon {
    width: 57rpx;
    height: 57rpx;
    display: inline-block;
    flex-shrink: 0;
    margin: 0 6rpx;
    margin-left: -10rpx;
}

.language-item-active {
    background: rgba(29, 78, 216, 0.10);
    border: 2rpx solid #1d4ed8;
}

.language-item-active .language-item-text {
    color: #1d4ed8;
}

/* Invite code bottom sheet */
.invite-sheet-content {
    display: flex;
    flex-direction: column;
    gap: 32rpx;
}

.invite-section {
    display: flex;
    flex-direction: column;
    gap: 16rpx;
}

.invite-section-title {
    font-size: 30rpx;
    font-weight: 600;
    color: #1f2933;
}

.invite-code-display {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 16rpx 20rpx;
    background: #f3f4f6;
    border-radius: 12rpx;
    min-height: 60rpx;
}

.invite-code-text {
    font-size: 28rpx;
    font-weight: 600;
    color: #1d4ed8;
    font-family: 'Courier New', monospace;
    flex: 1;
}

.invite-code-copy {
    font-size: 26rpx;
    color: #6b7280;
    margin-left: 16rpx;
}

.invite-code-input {
    padding: 16rpx 20rpx;
    background: #f3f4f6;
    border-radius: 12rpx;
    font-size: 28rpx;
    border: none;
    outline: none;
    min-height: 60rpx;
}

.invite-apply-btn {
    margin-top: 16rpx;
    padding: 16rpx 24rpx;
    background: #1d4ed8;
    color: #ffffff;
    border-radius: 12rpx;
    font-size: 28rpx;
    font-weight: 600;
    border: none;
    outline: none;
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: 60rpx;
}


