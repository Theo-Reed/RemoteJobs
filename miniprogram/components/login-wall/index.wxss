/* 物理隔离：引入子模块 */
@import "./mascot.wxss";
@import "./new-user.wxss";
@import "./old-user.wxss";

/* Global Container */
.login-wall {
  --anchor-y: 45.45vh;
  
  /* --- 引擎变量默认值 --- */
  --star-x: 50vw;
  --star-y: var(--anchor-y);
  --star-size: 40vw; 
  --star-opacity: 1;
  --star-scale: 1;
  
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  z-index: 10000;
  display: none;
  opacity: 0;
  background: transparent;
  /* 背景蒙版淡出：1.5秒 */
  transition: opacity 1.5s cubic-bezier(0.55, 0.055, 0.675, 0.19);
}

.login-wall.visible {
  display: block !important;
  opacity: 1 !important;
}

/* 彻底清理：s-success 和 s-hidden 阶段强制移除所有干扰层 */
.login-wall.s-success .login-card,
.login-wall.s-hidden .login-card,
.login-wall.s-success .splash-content,
.login-wall.s-hidden .splash-content {
  display: none !important; 
}

/* Background Layer */
.glass-mask {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 0;
  background: transparent; /* 默认设为透明，避免遮挡 */
  backdrop-filter: none;
  -webkit-backdrop-filter: none;
  transition: background 1.5s ease, backdrop-filter 1.5s ease;
}

/* 强制覆盖 Tabbar：确保淡出过程遮挡底部 */
.login-wall.wall-fade-out {
  opacity: 0 !important;
  pointer-events: none;
  z-index: 999999 !important; /* 提到最高层级 */
  transition: opacity 1.5s cubic-bezier(0.55, 0.055, 0.675, 0.19) !important;
}

.splash-content {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  transition: opacity 0.5s ease;
  z-index: 2;
  pointer-events: none;
}

.splash-content.fade-out {
  opacity: 0;
}


/* --- Phase 2: Login Card --- */
.login-card {
  position: fixed; 
  left: 50%;
  top: var(--anchor-y); /* 使用全局锚点变量 */
  /* 使用 -50% 让卡片自身的中轴线对齐锚点 */
  transform: translate(-50%, -40%); 
  
  width: 78vw; 
  background: rgba(255, 255, 255, 0.82); 
  backdrop-filter: blur(20px);
  -webkit-backdrop-filter: blur(20px);
  
  border-radius: 64rpx;
  padding: 64rpx 48rpx 40rpx 48rpx; /* 减少底部内边距 */
  box-shadow: 0 40rpx 100rpx rgba(0, 0, 0, 0.15);
  
  opacity: 0;
  transition: all 0.6s cubic-bezier(0.23, 1, 0.32, 1);
  pointer-events: none;
  z-index: 10;
  display: flex;
  flex-direction: column;
}

.login-card.show {
  opacity: 1;
  transform: translate(-50%, -50%); /* 最终落位在 5/11 处 */
  pointer-events: auto;
}

/* 授权成功，整体渐渐淡出 */
.login-card.hide-all {
  opacity: 0 !important;
  pointer-events: none;
  /* 不移动，保持在原地 */
  transform: translate(-50%, -50%) !important;
}

/* 内部内容淡出逻辑 */
.card-inner-content {
  opacity: 1;
  transition: opacity 0.5s ease;
  width: 100%;
  display: flex;
  flex-direction: column;
}

.card-inner-content.content-fade-out {
  opacity: 0;
  pointer-events: none;
}

/* Provide space for the shared lottie engine */
.logo-placeholder {
  width: 140rpx; /* Slightly smaller than canvas to feel snug */
  height: 140rpx;
  margin-right: 30rpx;
  flex-shrink: 0;
  /* Invisible space */
}

/* Status Banner */
.status-banner {
  height: 0;
  overflow: hidden;
  background: #fef2f2;
  border-radius: 24rpx;
  margin-bottom: 0;
  transition: all 0.5s cubic-bezier(0.19, 1, 0.22, 1);
  opacity: 0;
}

.status-banner.active {
  height: 80rpx;
  margin-bottom: 30rpx;
  opacity: 1;
}

.banner-content {
  height: 80rpx;
  display: flex;
  align-items: center;
  padding: 0 30rpx;
}

.banner-text {
  font-size: 24rpx;
  color: #991b1b;
  font-weight: 500;
}

/* Card Header */
.card-header {
  display: flex !important;
  align-items: center !important;
  margin-bottom: 30rpx !important; /* 从 50rpx 减少到 30rpx，压缩标题下方间距 */
  flex-direction: row !important;
}

.title-group {
  text-align: left !important;
}

.main-title {
  display: block;
  font-size: 44rpx;
  font-weight: 800;
  color: #1e293b;
  margin-bottom: 4rpx;
}

.sub-title {
  display: block;
  font-size: 24rpx;
  color: #64748b;
  font-weight: 500;
}

/* Form */
.auth-section {
  display: flex;
  flex-direction: column;
  gap: 32rpx;
  padding: 20rpx 0;
}

.auth-tips {
  text-align: center;
}

.tips-text {
  font-size: 26rpx;
  color: #64748b;
  line-height: 1.6;
}

.phone-btn {
  gap: 16rpx;
}

.btn-icon {
  width: 44rpx;
  height: 44rpx;
}

.auth-desc {
  font-size: 24rpx;
  color: #94a3b8;
  text-align: center;
}

.primary-btn {
  width: 100% !important;
  height: 110rpx;
  background: linear-gradient(135deg, #3b82f6, #2563eb) !important;
  color: #ffffff !important;
  border-radius: 32rpx !important;
  font-size: 32rpx !important;
  font-weight: 700 !important;
  display: flex !important;
  align-items: center !important;
  justify-content: center !important;
  margin-top: 0rpx !important;
  box-shadow: 0 20rpx 40rpx rgba(37, 99, 235, 0.2) !important;
}

.card-footer {
  margin-top: 35rpx;
  padding-bottom: 12rpx;
  text-align: center;
}

.protocol {
  font-size: 22rpx;
  color: #94a3b8;
}

/* Animations */
@keyframes breathe {
  0%, 100% { transform: scale(1); }
  50% { transform: scale(1.05); }
}

@keyframes wave {
  0%, 80%, 100% { transform: scale(0.8); opacity: 0.3; }
  40% { transform: scale(1.5); opacity: 1; }
}

.error-layer {
  display: none !important;
}
