/* miniprogram/components/detail-header/index.wxss */
.detail-header {
  padding: 40rpx 32rpx 20rpx;
  border-bottom: 1rpx solid #eee;
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: relative;
  flex-shrink: 0;
}

.back-hit {
  position: absolute;
  left: 0;
  top: 0;
  height: 100%;
  width: 120rpx;
  display: flex;
  align-items: center;
  justify-content: flex-start;
}

.back-button {
  width: 16rpx;
  height: 16rpx;
  border-left: 5rpx solid #111827;
  border-bottom: 5rpx solid #111827;
  transform: rotate(45deg);
  margin-left: 40rpx;
}

.back-button::after {
  content: '';
}

